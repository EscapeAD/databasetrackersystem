<section class='container'>
<%= form_for @event do |f| %>
<div class="form-group row">
     <%= f.label :name, class: 'col-sm-2 col-form-label'%>
     <div class="col-sm-10">
       <%= f.text_field :name , class: "form-control", placeholder: 'Festival 1'%>
     </div>
</div>
<div class="form-group row">
     <%= f.label :start, class: 'col-sm-2 col-form-label'%>
     <div class="col-sm-10">
       <%= f.date_field :start , class: "form-control", placeholder: 'Start Date'%>
     </div>
</div>
<div class="form-group row">
     <%= f.label :end, class: 'col-sm-2 col-form-label'%>
     <div class="col-sm-10">
       <%= f.date_field :end , class: "form-control", placeholder: 'End Start'%>
     </div>
</div>
<div class="form-group row">
     <%= f.label :contact, class: 'col-sm-2 col-form-label'%>
     <div class="col-sm-10">
       <%= f.text_field :contact , class: "form-control", placeholder: 'Contact'%>
     </div>
</div>
<div class="form-group row">
     <%= f.label :location, class: 'col-sm-2 col-form-label'%>
     <div class="col-sm-10">
       <%= f.text_field :location , class: "form-control", placeholder: 'Location'%>
     </div>
</div>

 <div class="form-group row">
   <div class="offset-sm-2 col-sm-10">
     <%= f.submit "Create Event", class:'btn btn-primary'%>
   </div>
</div>
<% end %>
</div>
