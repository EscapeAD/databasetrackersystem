<h1><%= @event.name %> </h1>





<div class='card'>
  <div class="card-block">
    <%= link_to 'Attend User', new_event_reserf_path(@event), class: 'btn btn-primary' %>
    <%= link_to 'User Sign-In', new_event_reserf_path(@event), class: 'btn btn-primary' %>
    <br/><br/>
    <div class='row'>
    <div class='col'>
      <span class=''>People Reserved:</span> <%= @reserve.length %>
    </div>
    <div class='col'>
      <span class=''>People signed-In:</span> <%= @reserve.where(ticket: true).length %>

    </div>
    </div>
  </div>
</div>



<h1>Booths</h1>
<table class="table">
  <thead>
    <tr>
      <th>Event</th>
      <th>Name</th>
      <th>Start</th>
      <th>End</th>
      <th>Sponser</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @booths.each do |booth| %>
      <tr>
        <td><%= booth.event.name %></td>
        <td><%= booth.name %></td>
        <td><%= booth.start %></td>
        <td><%= booth.end %></td>
        <td><%= booth.sponser %></td>
        <td><%= link_to 'Show', event_booth_path([@event, booth]) %></td>
        <td><%= link_to 'Edit', edit_event_booth_path([@event, booth]) %></td>
        <td><%= link_to 'Destroy', event_booth_path(@event, booth), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booth', new_event_booth_path(@event) %>
