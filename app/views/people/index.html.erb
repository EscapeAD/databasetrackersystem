<section class='home-add'>
  <%= form_for @person do |f| %>
  <div class="form-group row">
       <%= f.label :name, class: 'col-sm-2 col-form-label'%>
       <div class="col-sm-10">
         <%= f.text_field :name , class: "form-control", placeholder: 'John Doe'%>
       </div>
     </div>
  <div class="form-group row">
       <%= f.label :email, class: 'col-sm-2 col-form-label'%>
       <div class="col-sm-10">
         <%= f.email_field :email , class: "form-control", placeholder: '@hotmail.com'%>
       </div>
     </div>
  <div class="form-group row">
       <%= f.label :number, class: 'col-sm-2 col-form-label'%>
       <div class="col-sm-10">
         <%= f.telephone_field :number , class: "form-control", placeholder: '1-800-222-2222'%>
       </div>
     </div>

     <div class="form-group row">
       <div class="offset-sm-2 col-sm-10">
         <%= f.submit "Create Person", class:'btn btn-primary'%>
       </div>
     </div>
  <% end %>
</section>
<section class='home-list'>
  <table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>#</th>
      <th>Full Name</th>
      <th>Email</th>
      <th>Number</th>
    </tr>
  </thead>
  <tbody>
      <% @people.each do |person| %>
    <tr>
      <th scope="row"><%= person.id %></th>
      <td><%= person.name %></td>
      <td><%= person.email %></td>
      <td><%= person.number %></td>
    </tr>
      <% end %>
  </tbody>
</table>
</section>
